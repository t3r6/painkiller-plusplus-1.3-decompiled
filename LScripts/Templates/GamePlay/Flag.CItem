function Flag:OnCreateEntity()
    ENTITY.EnableNetworkSynchronization(self._Entity,true,true)
	local param = "fblue"
	if self.Team == 1 then
		param = "fred"
	end
    ENTITY.SetSynchroString(self._Entity,"Flag.CItem"..":"..param)
    self:Client_OnCreateEntity(self._Entity,param)
    self._RespawnPos = Clone(self.Pos)
end
